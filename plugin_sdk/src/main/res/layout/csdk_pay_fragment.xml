<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="@drawable/csdk_login_title_bg">

                <RelativeLayout
                    android:id="@+id/tc_login_rtyt_back"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/tc_login_btn_back"
                        android:layout_width="12dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"

                        android:background="@drawable/csdk_btn_back_selector" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tc_login_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:text="@string/csdk_pay_text"
                    android:textColor="@color/csdk_normal_text_color"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/tc_web_close_btn"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/csdk_btn_close" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/csdk_login_content_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cw_text_good_name"
                    android:textColor="@color/csdk_normal_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="元宝x300"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cw_text_good_price"
                    android:textColor="@color/csdk_normal_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="￥30.00"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/cw_btn_pay_alipay"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/csdk_pay_alipay" />

                        <TextView
                            android:textColor="@color/csdk_normal_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="支付宝"
                            android:textSize="10sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/cw_btn_pay_wx"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="@drawable/csdk_pay_wx" />

                        <TextView
                            android:textColor="@color/csdk_normal_text_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="微信支付"
                            android:textSize="10sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

